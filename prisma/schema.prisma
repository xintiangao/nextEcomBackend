// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String?
  email     String   @unique
  password  String?
  photos    Photos[] 
}

model Photos {
  id           Int       @id @default(autoincrement())
  UserId       Int
  name         String?
  file         String?
  price        String?
  title        String? 
  description  String?  
  createdAt  DateTime  @default(now())
            
  user         User      @relation(fields: [UserId], references: [id])
  order        Order[] 
}

model Order {
  id         Int       @id @default(autoincrement())
  photosId   Int  
  price      Int 
  createdAt  DateTime  @default(now())

  photos     Photos    @relation(fields: [photosId], references: [id])
}